@model IEnumerable<ProjetoESW.Models.Volunteer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Voluntários</h2>

<p>
    <a asp-action="Create">Adicionar Novo</a>
</p>
<div class="table-responsive">
    <table id="volunteers" class="table table-striped table-hover dataTable js-exportable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telephone)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telephone)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.ID"><i class="far fa-eye"></i></a> |
                        <a asp-action="Edit" asp-route-id="@item.ID"><i class="fas fa-edit"></i></a> |
                        <a asp-action="Delete" asp-route-id="@item.ID"><i class="far fa-trash-alt"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {

    <script src="~/lib/jquery-datatable/jquery.dataTables.js"></script>
    <script src="~/lib/jquery-datatable/skin/bootstrap/js/dataTables.bootstrap.js"></script>
    <script src="~/lib/jquery-datatable/extensions/export/buttons.flash.min.js"></script>
    <script src="~/lib/jquery-datatable/extensions/export/buttons.html5.min.js"></script>
    <script src="~/lib/jquery-datatable/extensions/export/buttons.print.min.js"></script>
    <script src="~/lib/jquery-datatable/extensions/export/dataTables.buttons.min.js"></script>
    <script src="~/lib/jquery-datatable/extensions/export/jszip.min.js"></script>
    <script src="~/lib/jquery-datatable/extensions/export/pdfmake.min.js"></script>
    <script src="~/lib/jquery-datatable/extensions/export/vfs_fonts.js"></script>

    <script>
        $(function () {
            $('.js-basic-example').DataTable({
                responsive: true
            });

            //Exportable table
            $('.js-exportable').DataTable({
                dom: 'Bfrtip',
                responsive: true,
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ]
            });
        });
    </script>
}