@model ProjetoESW.Models.Volunteer

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="header">
        <h2>Ficha de Voluntário</h2>
        <span>@Html.DisplayFor(model => model.Name)</span>
    </div>
    <div class="body">
        <div>
            <dl class="dl-horizontal">        
                <dt>
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Telephone)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Telephone)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.ID"><span class="btn btn-primary btn-export"><i class="fa fa-edit"></i> Editar</span></a>
            <a asp-action="Index"><span class="btn btn-primary btn-export"><i class="fa fa-backward"></i> Voltar</span></a>
        </div>

    </div>
</div>