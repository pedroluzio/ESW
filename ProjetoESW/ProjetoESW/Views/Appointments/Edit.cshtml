@model ProjetoESW.Models.Animals.Appointment

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnimalID" class="control-label"></label>
                <select asp-for="AnimalID" class="form-control" asp-items="ViewBag.AnimalID"></select>
                <span asp-validation-for="AnimalID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="OVH" /> @Html.DisplayNameFor(model => model.OVH)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ColonyID" class="control-label"></label>
                <select asp-for="ColonyID" class="form-control" asp-items="ViewBag.ColonyID"></select>
                <span asp-validation-for="ColonyID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

