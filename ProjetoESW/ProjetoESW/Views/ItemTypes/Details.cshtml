@model ProjetoESW.Models.Stock.ItemType

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="header">
        <h2>@Html.DisplayFor(model => model.Description)</h2>
    </div>
    <div class="body">
        <div class="row clearfix">
            <div class="col-md-4">
                <span><b>Limite de Segurança:</b> @Html.DisplayFor(model => model.SafetyLimit) Kg</span>
            </div>
            <div class="col-md-4">
                <span><b>Quantidade Total:</b> @(string.Format("{0:0,0}", this.Model.Items.Sum(x => x.Movements.Sum(y => y.Quantity)))).TrimStart('0')</span>
            </div>
            <div class="col-md-4">
                <span><b>Capacidade Total:</b> @(string.Format("{0:0,0.00}", this.Model.Items.Sum(x => x.Movements.Sum(y => y.Quantity) * x.Quantidade))).TrimStart('0') Kg</span>
            </div>
        </div>
    </div>
</div>



@Html.Partial("../Items/index", Model.Items, new ViewDataDictionary(this.ViewData) { { "layout", "none" } })

